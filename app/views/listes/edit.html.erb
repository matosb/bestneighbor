<%= content_for :title, title("Mise à jour liste") %>
<%= content_for :description, description("Mise à jour de ma liste") %>

<div class="fond" url('<%= image_path "i-like-food.svg" %>')>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <%= simple_form_for @liste do |l| %>
          <%= l.input :nom, placeholder: "Nom de la liste", label: "Nom de la liste" %>
          <%= l.input :content, placeholder: "Contenu", label: "Contenu" %>
          <%= l.input :date_livraison, placeholder: "Date de livraison demandée", label: "Date livraison" %>
          <%= l.button :submit, "Enregistrer", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
  <p class="required-zone">Les zones de saisie précédées d'une * sont obligatoires</p>
 </div>
