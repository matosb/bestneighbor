<%= content_for :title, title("Mise à jour de ma liste") %>
<%= content_for :description, description("Le contenu de la liste et la date de livraison peuvent être modifiés") %>
<%= content_for :other_scripts do %>
  <%= javascript_include_tag 'application' %>
<% end %>

  <div class="container">
    <div class="spacer"></div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <%= simple_form_for @liste do |l| %>
          <%= l.input :nom, placeholder: "Nom de la liste", label: "Nom de la liste" %>
          <%= l.input :content, placeholder: "Contenu", label: "Contenu" %>
          <%= l.input :date_livraison, input_html: { class: 'date' },placeholder: "Date de livraison demandée", label: "Date de livraison demandée" %>
          <%= l.button :submit, "Enregistrer", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
    <div class="spacer"></div>
  </div>
