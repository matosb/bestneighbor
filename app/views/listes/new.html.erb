<%= content_for :title, title("Ma liste de courses") %>
<%= content_for :description, description("Création, modification et visualisation de ma liste de courses") %>

  <div class="container">
    <div class="spacer"></div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <% if @ma_liste.present? %>

                   <div class="product">

                      <%= render @ma_liste %>

                      <% if @ma_liste.takenby != 0 %>

                        <h6><strong>
                            Votre liste est prise en charge -
                            Pour la modifier ou la supprimer
                            contactez votre voisin à l'adresse mail <%= link_to @email %>
                        </strong></h6>

                      <% else %>

                        <ul class="list-inline product-controls">

                           <li>
                             <%= link_to edit_liste_path(@ma_liste) do %>
                              <i class="fa fa-pencil" title="modifier"></i>
                             <% end %>
                           </li>

                           <li>
                             <%= link_to liste_path(@ma_liste), method: :delete do %>
                              <i class="fa fa-trash" title="supprimer"></i>
                             <% end %>
                           </li>

                        </ul>

                      <% end %>

                   </div>

        <% else %>

          <%= simple_form_for @liste do |l| %>
            <%= l.input :nom, placeholder: "Nom de la liste", label: "Nom de la liste" %>
            <%= l.input :content, placeholder: "Contenu", label: "Contenu" %>

            <%= l.input :date_livraison, input_html: { class: 'date' },placeholder: "Date de livraison demandée", label: "Date de livraison demandée" %>

            <%= l.button :submit, "Créer", class: "btn btn-primary" %>
          <% end %>

        <% end %>

      </div>
    </div>

  <div class="spacer"></div>
  <%= link_to "Retour", choix_path %>

 </div>
