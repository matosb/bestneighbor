<div class="fond" url('<%= image_path "i-like-food.svg" %>')>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <%= simple_form_for @user do |u| %>
        <%= u.input :nom, placeholder: "Nom", label: "Nom"%>
        <%= u.input :prenom, placeholder: "Prénom", label: "Prénom"%>
        <%= u.input :codepostal, placeholder: "Code postal", label: "Code postal"%>
        <%= u.input :ville, placeholder: "Ville", label: "Ville"%>
        <%= u.input :email, placeholder: "Email", label: "Email"%>
        <%= u.input :notel, placeholder: "Tél.", label: "Tél."%>
        <%= u.input :passwd, placeholder: "Mot de passe", label: "Mot de passe"%>
        <%= u.button :submit, "Créer", class: "btn btn-primary"%>
      <% end %>

      <div class="spacer"></div>

      <%= link_to "Déjà inscrit ?", users_login_path %>

    </div>
  </div>
</div>
  <p class="required-zone">Les zones de saisie précédées d'une * sont obligatoires</p>
</div>
