<div class="product">

      <div class='product-body'>
        <h6>Au départ de <strong><%= covoiturage.depart %></strong> pour <strong><%= covoiturage.destination %></strong></h6>
        <h6>Le <strong><%= covoiturage.date.to_date.strftime("%d %b %Y") %> à <%= covoiturage.heure %></strong></h6>
        <% if params[:my_covoits] or params[:not_taken] %>
          <h6>Places proposées : <%= covoiturage.nbplaces %></h6>
          <h6>Places restantes : <%= covoiturage.nbdispos %></h6>
        <% end %>
      </div>

      <ul class="list-inline product-controls">

      <% if params[:not_taken] %>
        <li>
          <%= link_to edit_covoiturage_path(covoiturage, :not_taken => true) do %>
            <i class="fa fa-handshake-o" title="réserver"></i>
          <% end %>
        </li>
      <% end %>

      <% if params[:taken_by] %>
        <li>
          <%= link_to covoiturage_path(covoiturage), method: :takenby do %>
            <i class="fa fa-trash" title="ne plus réserver"></i>
          <% end %>
        </li  >
      <% end %>

      <% if params[:my_covoits] %>
        <li>
          <%= link_to covoiturage_path(covoiturage), method: :delete do %>
            <i class="fa fa-trash" title="supprimer"></i>
          <% end %>
        </li>
      <% end %>

    </ul>

</div>
