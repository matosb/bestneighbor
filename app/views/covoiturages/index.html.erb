<%= content_for :title, title("Listes de trajets") %>
<%= content_for :description, description("Listes de trajets à chercher, choisis ou proposés") %>

<div class="container">

  <div class="row">

    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <% if params[:not_taken] %>
        <h4>Trajets disponibles</h4>
      <% end %>

      <% if params[:taken_by] %>
        <h4>Mes trajets réservés</h4>
      <% end %>

      <% if params[:my_covoits] %>
        <h4>Mes propositions</h4>
      <% end %>

      <%= paginate @covoiturages %>
      <%= render @covoiturages %>
      <%= paginate @covoiturages %>

     </div>

  </div>

  <div class="spacer"></div>
  <% if params[:not_taken] %>
    <%= link_to "Mes trajets réservés", covoiturages_path(:taken_by => true) %>
  <% end %>

</div>

