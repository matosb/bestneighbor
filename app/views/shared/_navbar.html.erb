<div class="navbar-wagon">

  <a href="/" class="navbar-wagon-brand">
    Best<strong>neighbor</strong>
  </a>

  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Courses with dropdown menu -->

      <div class="navbar-wagon-item">
        <div class="dropdown">

          <a href="#" class="dropdown-toggle navbar-wagon-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Courses</a>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to "Besoin d'une course ?", new_liste_path %>
            </li>
            <li>
              <%= link_to "J'arrive à la res'course !", listes_path(:not_taken => true) %>
            </li>

          </ul>

        </div>
       </div>

      <!-- Covoiturage with dropdown menu -->

      <div class="navbar-wagon-item">
        <div class="dropdown">

          <a href="#" class="dropdown-toggle navbar-wagon-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Covoiturage</a>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to "Proposer un trajet", new_covoiturage_path %>
            </li>
            <li>
              <%= link_to "Chercher un trajet", covoiturages_path(:not_taken => true) %>
            </li>

          </ul>

        </div>
       </div>


      <!-- Autres menus -->

      <div class="navbar-wagon-item">
        <div class="dropdown">

          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", :data => {:toggle=>"dropdown"} %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to "Mon profil", edit_user_registration_path %>
            </li>
            <li>
              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>
            </li>

          </ul>

        </div>
       </div>

    <% else %>

      <div class="navbar-wagon-item">
        <div class="dropdown">

          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", :data => {:toggle=>"dropdown"} %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to "Connexion", new_user_session_path %>
            </li>
            <li>
              <%= link_to "Inscription", new_user_registration_path %>
            </li>

          </ul>

        </div>
       </div>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">

    <% if user_signed_in? %>

      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <li class="dropdown-header">Courses</li>
          <li>
            <%= link_to "Besoin d'une course ?", new_liste_path %>
          </li>
          <li>
            <%= link_to "J'arrive à la res'course !", listes_path(:not_taken => true) %>
          </li>

          <li class="dropdown-header">Covoiturage</li>
          <li>
            <%= link_to "Proposer un trajet", new_covoiturage_path %>
          </li>
          <li>
            <%= link_to "Chercher un trajet", covoiturages_path(:not_taken => true) %>
          </li>

          <li class="dropdown-header">Autres</li>
          <li>
            <%= link_to "Mon profil", edit_user_registration_path %>
          </li>
          <li>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>
          </li>

        </ul>
      </div>

    <% else %>

      <div class="dropdown">

        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "Connexion", new_user_session_path %>
          </li>
          <li>
            <%= link_to "Inscription", new_user_registration_path %>
          </li>

        </ul>
      </div>

    <% end %>

  </div>

</div>
