<%= content_for :title, title("Inscription") %>
<%= content_for :description, description("Inscription - saisie email, mot de passe, code postal") %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "city-2042634_960_720.png" %>');">

  <div class="banner-content">

    <div class="container text-center">

      <div class="row">

        <div class="col-sm-4 col-sm-offset-4">

          <h3>Inscription</h3>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, input_html: { placeholder: "E-mail" }, label: false, autofocus: true %>
              <%= f.input :code_postal, input_html: { placeholder: "Code postal" }, label: false %>
              <%= f.input :notel, input_html: { placeholder: "Mobile" }, label: false %>
              <%= f.input :password, input_html: { placeholder: "Mot de passe" }, label: false, required: true %>
              <%= f.input :password_confirmation, input_html: { placeholder: "Confirmer mot de passe" }, label: false, required: true %>
              <%= f.input :avatar, as: :attachinary %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "S'inscrire", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <p></p>
          <%= render "devise/shared/links" %>

        </div>

      </div>

    </div>

  </div>

</div>




