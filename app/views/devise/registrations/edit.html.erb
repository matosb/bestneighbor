<%= content_for :title, title("Profil") %>
<%= content_for :description, description("Profil - modification mot de passe, suppression compte") %>

  <div class="container text-center">

      <div class="row">

          <div class="col-sm-4 col-sm-offset-4">

              <h2>Mon profil</h2>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">


                  <%= f.input :email, disabled: true %>

                  <!--
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>
                -->

                  <%= f.input :password, autocomplete: "off", hint: "NE PAS REMPLIR si vous ne souhaitez pas modifier votre mot de passe", required: false, autofocus: true, label: "Nouveau mot de passe" %>
                  <%= f.input :password_confirmation, required: false, label: "Confirmer le nouveau mot de passe" %>
                  <%= f.input :current_password, hint: "Saisir votre mot de passe actuel pour confirmer les changements", required: true, label: "Mot de passe actuel" %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Mettre à jour", class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>

              <div class="spacer"></div>

              <p><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sûr ?" }, method: :delete %></p>

            </div>

         </div>

       </div>

<%= link_to "Retour", :back %>
