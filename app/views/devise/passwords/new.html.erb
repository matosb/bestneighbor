<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "city-2042634_960_720.png" %>');">

  <div class="container text-center">

    <div class="row">

      <div class="col-sm-4 col-sm-offset-4">

          <h2>Mot de passe oublié ?</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, input_html: { placeholder: "E-mail" }, label: false, autofocus: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Réinitialiser le mot de passe", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

           <p></p>
          <%= render "devise/shared/links" %>

      </div>

    </div>

  </div>

</div>
