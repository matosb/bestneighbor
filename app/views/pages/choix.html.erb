<%= content_for :title, title("Choix des services") %>
<%= content_for :description, description("Choix des services : courses et covoiturage") %>

<div class="fond" url('<%= image_path "i-like-food.svg" %>')>

  <div class="banner-content courses">

      <div class="container text-center">

          <div class="row">
            <h2>Courses</h2>
          </div>

          <div class="row">
            <div class="col-sm-6 col-md-6 feature circle">
              <p>Pas le temps de faire une course ?</p>
              <%= link_to "Créer ma liste", new_liste_path, class: "btn btn-primary btn-lg" %>
            </div>

            <div class="col-sm-6 col-md-6 feature circle">
              <p>Je peux prendre une liste en charge ?</p>
              <%= link_to "Voir les listes", listes_path, class: "btn btn-primary btn-lg" %>
            </div>

          </div>

      </div>

  </div>

</div>

<div class="spacer"></div>

<div class="fond2" url('<%= image_path "overlapping-circles.svg" %>')>
    <div class="banner-content covoiturage">

      <div class="container text-center">

          <div class="row">
            <h2>Covoiturage</h2>
          </div>

          <div class="row">
            <div class="col-sm-6 col-md-6 feature circle">
              <p>Besoin d'être covoituré ?</p>
              <%= link_to "Créer mon trajet", new_trajet_path, class: "btn btn-primary btn-lg" %>
            </div>

            <div class="col-sm-6 col-md-6 feature circle">
              <p>Je peux prendre un trajet en charge ?</p>
              <%= link_to "Voir les trajets", trajets_path, class: "btn btn-primary btn-lg" %>
            </div>

          </div>

      </div>

  </div>
</div>


