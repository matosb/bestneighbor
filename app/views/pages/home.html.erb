<div class="banner" style="background-image: url('<%= image_path "city-2042634_960_720.png" %>');">
  <div class="banner-content">

    <div class="container text-center">
      <div class="row">

        <% if user_signed_in? %>

          <!--<%= link_to "Covoiturage", covoit_path, class: "btn btn-primary btn-lg" %>
          <div class="spacer"></div>-->

          <!--
          <%= link_to "Courses", courses_path, class: "btn btn-primary btn-lg" %>
          <div class="spacer"></div>
          -->

          <% if @neighbors === 0 %>
            <p class="nbvoisins"><strong>Vous n'avez pas encore de voisins inscrits près de chez vous</strong></p>
            <p class="info"><strong><em>Parlez en autour de vous !</strong></em></p>
          <% elsif @neighbors === 1 %>
            <p class="nbvoisins"><strong><%= @neighbors %> voisin est inscrit près de chez vous<strong></p>
            <p class="info"><strong><em>Pour avoir plus de voisins parlez en autour de vous !</strong></em></p>
          <% elsif @neighbors < 20 %>
            <p class="nbvoisins"><strong><%= @neighbors %> voisins sont déjà inscrits près de chez vous</strong></p>
            <p class="info"><strong><em>Pour avoir plus de voisins parlez en autour de vous !<strong></em></p>
          <% end %>

          <!--<%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>-->

        <% else %>

          <h2>Covoiturage entre voisins !</h2>
          <div class="spacer"></div>
          <div class="spacer"></div>
          <div class="spacer"></div>
          <!--<h4>Vous voulez donner un coup de main ou être dépanné ?</h4>-->
          <%= link_to "Démarrer", new_user_registration_path, class: "btn btn-warning btn-lg" %>

        <% end %>

      </div>

    </div>
  </div>
</div>

