<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "background.jpg" %>');">
  <div class="banner-content">
    <h1>Une course à faire ?</h1>
    <p>Dépannez vous entre voisins</p>

      <% if @current_user %>
        <%= link_to "Je continue", choix_path, class: "btn btn-primary btn-lg" %>
        <div class="spacer"></div>
        <%= link_to "Déconnexion", users_login_path, method: :delete %>

      <% else %>
        <%= link_to "Je m'inscris", users_new_path, class: "btn btn-primary btn-lg" %>
        <div class="spacer"></div>
        <%= link_to "Je me connecte", users_login_path %>

      <% end %>

 <div class="spacer"></div> <!-- permet de mettre de l'espace au dessus des fonctions -->

        <div class="container text-center"> <!-- container bootstrap, on utilise également la classe
        bootstrap text-center qui permet de tout centrer dans le container -->
          <div class="row">     <!-- row bootstrap -->

            <div class="col-sm-6 col-md-4 feature circle">
              <%= image_tag "noun_949373_cc.png", alt: "Une course ?", title: "Une course ?", width: "100", class: "circle" %>
              <p>Une course ?</p>
            </div>

            <div class="col-sm-6 col-md-4 feature circle">
              <%= image_tag "noun_735684_cc.png", alt: "Idée !", title: "Idée !", width: "100", class: "circle" %>
              <p>Idée !</p>
            </div>

            <div class="col-sm-6 col-md-4 feature circle">
               <%= image_tag "noun_713963_cc.png", alt: "Mes voisins", title: "Mes voisins", width: "100", class: "circle" %>
              <p>Mes voisins</p>
            </div>

          </div>

        </div>
</div>
</div>
