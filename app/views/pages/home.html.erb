<%= content_for :title, title("Accueil") %>
<%= content_for :description, description("Covoiturage et courses entre voisins - connexion et inscription depuis cette page") %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "city-2042634_960_720.png" %>');">

  <div class="banner-content">

    <div class="container text-center">
      <div class="row">

        <h2>Covoiturage et courses entre voisins !</h2>
        <p>Vous voulez donner un coup de main ou être dépanné ?</p>

        <% if user_signed_in? %>

          <%= link_to "Courses", courses_path, class: "btn btn-red btn-lg" %>
          <div class="spacer"></div>

          <%= link_to "Covoiturage", covoit_path, class: "btn btn-red btn-lg" %>
          <div class="spacer"></div>
          <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>

        <% else %>

          <%= link_to "Démarrer", new_user_registration_path, class: "btn btn-red btn-lg" %>

        <% end %>

      </div>

    </div>
  </div>
</div>

